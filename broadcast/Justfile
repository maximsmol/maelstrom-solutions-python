@serve:
  ../maelstrom/maelstrom serve

# Stage 1

@stage-1-test:
  ../maelstrom/maelstrom test \
    --workload broadcast \
    --bin main.py \
    --log-stderr \
    --log-net-recv \
    --log-net-send \
    --node-count 1 \
    --time-limit 1 \
    --rate 10

@stage-1-validate:
  ../maelstrom/maelstrom test \
    --workload broadcast \
    --bin main.py \
    --node-count 1 \
    --time-limit 20 \
    --rate 10

